{% block stylesheets %}
    <title>Форма</title>
{% endblock %}
{% block body %}
    <div class="wrapper">
        <br>
    <form action="{{ path('create_product') }}" method="post" align="center">
        <h1>Создать продукт</h1>
        {{ form_start(form) }}
        <div class="input-box">
            <label for="title">
                {{ form_row(form.title, {'attr': {'placeholder': 'Title'}}) }}
            </label>
        </div>
        <div class="input-box">
            <label for="category">
                {{ form_row(form.category, {'attr': {'placeholder': 'Category'}}) }}
            </label>
        </div>
        <div class="input-box">
            <label for="price">
                {{ form_row(form.price, {'attr': {'placeholder': 'Price'}}) }}
            </label>
        </div>
        <br>
        <button type="submit" class="btn">Send</button>
        {{ form_end(form) }}
    </form>
        <br>
        <div align="center">
            <a class="btn btn-success" href="{{ path('main') }}"> На главную </a>
        </div>

    </div>
{% endblock %}